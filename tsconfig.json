{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "system", // Verwende "system" für das Zusammenfügen
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outFile": "./dist/main.js", // Alle Dateien in eine einzige JavaScript-Datei bündeln
    "rootDir": "./src",
    "strict": true,
    "resolveJsonModule": true,
    "lib": ["DOM", "ES5", "ES6", "ES2021", "DOM.Iterable"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
